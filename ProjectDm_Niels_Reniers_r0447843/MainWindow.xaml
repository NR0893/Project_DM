<Window x:Class="ProjectDm_Niels_Reniers_r0447843.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectDm_Niels_Reniers_r0447843"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtNewUsername" materialDesign:HintAssist.Hint="New Username" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
  VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <Button x:Name="btnCreateUser" Style="{StaticResource MaterialDesignRaisedButton}" Width="auto" Content="Create New User" Grid.Row="0" Grid.Column="1" Margin="5"/>
        <TextBox x:Name="txtSearchUser" materialDesign:HintAssist.Hint="Search User" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
  VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <Button x:Name="btnSearchUser" Style="{StaticResource MaterialDesignRaisedButton}" Width="auto" Content="Search" Grid.Row="1" Grid.Column="1" Margin="5"/>
        <DataGrid x:Name="datagridUsers" AutoGenerateColumns="False" Margin="5"
	Grid.Row="3" Grid.Column="0"  Grid.RowSpan="3" IsReadOnly="True" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Users}" Header="Username" />
                <DataGridTextColumn Binding="{Binding Build}" Header="Builds" />
            </DataGrid.Columns>
            
        </DataGrid>
        <Button x:Name="btnBuilds" Style="{StaticResource MaterialDesignRaisedButton}" Width="auto" Content="Builds" Grid.Row="3" Grid.Column="1"  Margin="5" Click="btnBuilds_Click"/>
        <Button x:Name="btnDelete" Style="{StaticResource MaterialDesignRaisedButton}" Width="auto" Content="Delete User" Grid.Row="4" Grid.Column="1"  Margin="5"/>
    </Grid>
</Window>
